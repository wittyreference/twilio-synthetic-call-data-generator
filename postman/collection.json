{
  "info": {
    "name": "Vibe Coding API Tests",
    "description": "End-to-end API tests for the agent-assisted pipeline",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is less than 2000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "pm.test('Content-Type is application/json', function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "health"
          ]
        }
      }
    },
    {
      "name": "Twilio Webhook Test",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response contains TwiML', function () {",
              "    pm.expect(pm.response.text()).to.include('<?xml version=\"1.0\" encoding=\"UTF-8\"?>');",
              "});",
              "",
              "pm.test('Response contains valid TwiML Response', function () {",
              "    pm.expect(pm.response.text()).to.include('<Response>');",
              "    pm.expect(pm.response.text()).to.include('</Response>');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "From",
              "value": "{{test_phone_number}}",
              "type": "text"
            },
            {
              "key": "To",
              "value": "{{twilio_phone_number}}",
              "type": "text"
            },
            {
              "key": "Body",
              "value": "test message",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/webhook",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "webhook"
          ]
        }
      }
    },
    {
      "name": "API Error Handling",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 400 or 404', function () {",
              "    pm.expect([400, 404]).to.include(pm.response.code);",
              "});",
              "",
              "pm.test('Response contains error message', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response).to.have.property('error');",
              "});",
              "",
              "pm.test('Response time is acceptable', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(3000);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/nonexistent-endpoint",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "nonexistent-endpoint"
          ]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Global pre-request script",
          "console.log('Running test collection: ' + pm.info.requestName);"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Global test script",
          "pm.test('Response received within acceptable time', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://your-serverless-functions-domain.twil.io/dev",
      "type": "string"
    }
  ]
}